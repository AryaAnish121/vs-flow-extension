{
  "name": "vsflow",
  "displayName": "vsflow",
  "description": "You can ask questions here",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vsflow-sidebar",
    "onCommand:vsflow.authenticate",
    "onCommand:vsflow.askQuestion",
    "onCommand:vsflow.myQuestions",
    "onCommand:vsflow.viewQuestion"
  ],
  "main": "src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsflow-sidebar-view",
          "title": "VS Flow",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "vsflow-sidebar-view": [
        {
          "type": "webview",
          "id": "vsflow-sidebar",
          "name": "VS Flow",
          "icon": "media/icon.svg",
          "contextualTitle": "VS Flow"
        }
      ]
    },
    "commands": [
      {
        "command": "vsflow.authenticate",
        "title": "Authenticate with github"
      },
      {
        "command": "vsflow.askQuestion",
        "title": "Ask a question"
      },
      {
        "command": "vsflow.myQuestions",
        "title": "See all Questions"
      },
      {
        "command": "vsflow.viewQuestion",
        "title": "View question"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.59.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "polka": "^0.5.2"
  }
}
